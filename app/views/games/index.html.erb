<h1>Game Schedule</h1>
<section>
  <table>
    <thead>
      <tr>
        <th>Away Team</th>
        <th></th>
        <th>Home Team</th>
        <th>Game date</th>
        <th>Game time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.away_team.city %> <%= game.away_team.name %></td>
          <td>at</td>
          <td><%= game.home_team.city %> <%= game.home_team.name%></td>
          <td><%= game.game_date.month %>/<%= game.game_date.day %>/<%= game.game_date.year %></td>
          <td><%= game.game_time %></td>
          <td><%= link_to 'Show', game %></td>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
