<h1>Listing Teams</h1>

<div id="inside">
  <p id="notice"><%= notice %></p>

  <table>
    <thead>
      <tr>
        <th>Admin</th>
        <th>Name</th>
        <th>League</th>
        <th>City</th>
        <th>Mascot</th>
        <th>Primary color</th>
        <th>Secondary color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.team_admin_id %></td>
          <td><%= team.name %></td>
          <td><%= team.league_id %></td>
          <td><%= team.city %></td>
          <td><%= team.mascot %></td>
          <td><%= team.primary_color.capitalize %></td>
          <td><%= team.secondary_color.capitalize %></td>

          <% if team_admin_signed_in? %>
            <td><%= link_to 'Show', team %></td>
            <td><%= link_to 'Edit', edit_team_path(team) %></td>
            <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Team', new_team_path %>
</div>
