<h1>Listing Teams</h1>
<section id="first_section">
<table>
  <thead>
    <tr>
      <th>Team admin</th>
      <th>Name</th>
      <th>League</th>
      <th>City</th>
      <th>Mascot</th>
      <th>Primary color</th>
      <th>Secondary color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_admin_id %></td>
        <td><%= team.name %></td>
        <td><%= team.league_id %></td>
        <td><%= team.city %></td>
        <td><%= team.mascot %></td>
        <td><%= team.primary_color %></td>
        <td><%= team.secondary_color %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
