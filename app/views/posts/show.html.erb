<% if team_admin_signed_in? %>
  <button id="new"><%= link_to 'Edit', edit_post_path(@post) %></button>
<% end %>
<% team = @post.team.id %>
<section id="first_section">
  <p id="notice"><%= notice %></p>

  <p style="float:left;">
    <strong>Author:</strong>
    <%= @post.author.full_name %>
    <strong>Created At:</strong>
    <%= @post.readable_date %>
  </p><br><br>

  <u style="font-size:35px;">
    <strong style="float:left;">Team:</strong>
    <%= @post.team.name %>
  </u><br><br>

  <strong style="float:left;">Title:</strong>
  <%= @post.title %><br><br>

  <strong style="float:left;">Content:</strong>
  <%= @post.content %>

</section>
<button><%= link_to 'Back', team_path(team) %></button>
