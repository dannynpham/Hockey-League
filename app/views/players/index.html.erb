<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<section id="first_section">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Jersey</th>
        <th>Team</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.full_name %></td>
          <td style="padding-left: 1em"><%= player.jersey_number %></td>
          <td style="padding-left: 1em"><%= player.team_id %></td>
          <td><%= link_to 'Show', player %></td>
          <% if team_admin_signed_in? %>
          <td><%= link_to 'Edit', edit_player_path(player) %></td>
          <td><%= link_to 'Release', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Player', new_player_path %>
</section>
